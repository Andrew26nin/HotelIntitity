@model HotelIntitity.Models.Room
@{
    ViewData["Title"] = "Delete";
}
<h2>Удаление</h2>
<h3>Вы действительно хотите удалить это?</h3>
<div>
    <h4>Номер отеля</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Номер
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>



        <dt>
            Тип номера
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoomType.Type)
        </dd>
        <dt>
            Цена за сутки
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoomType.Cost)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-success" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
