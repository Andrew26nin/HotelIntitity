@using Data.Models
@using Data
@model Data.Models.Room
@{
    ViewData["Title"] = "Edit";
}
<h2>Редактировать</h2>
<h4>Номера отеля</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Номер</label>
                <label class="control-label"> @Html.DisplayFor(model => model.Id)</label>
            </div>
            <div class="form-group">
                <label asp-for="RoomTypeId" class="control-label">Тип номера</label>
                <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomType"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Вернуться</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
